<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello World"
        Width="350" ResizeMode="NoResize" SizeToContent="Height">
    <TabControl>
        <TabItem Header="Select Alignment">
            <Grid Background="#FFE5E5E5">
                <StackPanel>
                    <Button x:Name="alignment_button" Content="Select Alignment" HorizontalContentAlignment="Center" Margin="10,10,10,15" Click="select_alignment"/>
                    <ComboBox x:Name="family_symbol" HorizontalContentAlignment="Center" Text="Select Family" IsEditable="True" Margin="10,5,10,15"/>
                    <Button x:Name="Run" Content="Run" Height="50" Margin="10,5,10,10" Click="place_family" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="TabItem">
            <Grid Background="#FFE5E5E5">
                <DataGrid Name="datagrid" AutoGenerateColumns="False" Height="300"/>
            </Grid>
        </TabItem>
    </TabControl>


</Window>