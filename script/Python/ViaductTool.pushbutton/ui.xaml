<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hellow World"
        Width="350" ResizeMode="NoResize" SizeToContent="Height">
    <TabControl>
        <TabItem Header="TabItem">
            <Grid Background="#FFE5E5E5">
                <StackPanel>
                    <Button x:Name="alignment_button" Content="Select Alignment" Margin="10,5,10,5" Click="select_alignment"/>
                    <TextBox x:Name="TextBox" Margin="10,5,10,0" Text="TextBox" Height="50"/>
                    <Button Content="Send Data" Margin="10,5,10,5"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="TabItem">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>


</Window>